<!DOCTYPE html>
<html>
  <head>
    <title>Chatspace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="navbar navbar-light bg-light">
    <div class="navbar-brand">ヘルスアプリ</div>
    <div>
      <% if session[:user_id].present? %>
        <%= link_to "登録内容の更新", edit_user_path, class: "btn btn-outline-info"%>
        <%= link_to "ログアウト", logout_path, class: "btn btn-outline-secondary" %>
      <% else %>
        <%= link_to "会員登録", signup_path, class: "btn btn-outline-primary"%>
      <% end %>
    </div>
  </nav>
  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
