<h1>Show</h1>
<div class="card mb-3, container">
<div class="card-body">
  <h5 class="card-title"><%= @question.title %></h5>
  <p class="card-subtitle mb-2 text-muted"><%= @question.name %></p>
  <p class="card-text"><%= @question.content %></p>
  <p>投稿日：<%= @question.created_at.strftime("%Y/%m/%d") %></p>
</div>
</div>

<h2>Add a answer</h2>
<%= form_with model: [@question, @question.answers.build], class:"container" do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class:"form-control" %>
  </div>
  <div>
    <%= form.submit "投稿", class: "btn btn-success" %>
  </div>
<% end %>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <% if answer.name.present? && answer.content.present? %>
  <div class="card mb-3, container" >
  <div class="card-body">
    <p class="card-subtitle mb-2 text-muted"><%= answer.name %></p>
    <p class="card-text"><%= answer.content %></p>
    <p>回答日：<%= answer.created_at.strftime("%Y/%m/%d") %></p>
    <%= link_to "削除", [answer.question, answer],
      data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class:"btn btn-success" %>
  </div>
  </div>
  <% end %>
<% end %>

<%= link_to '一覧に戻る', questions_path, class: "btn btn-success" %>
