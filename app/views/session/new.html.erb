<h1>ログイン</h1>
<h5 class="login-guide">ログイン後、体調管理ツールが使用できます</h5>
<%= form_with url: login_path, local: true, class: "login-form", data: { turbo: false } do |f| %>
  <div class="form-group login-email">
    <label>メールアドレス</label>
    <%= f.text_field :email, class: "form-control", size: 50 %>
  </div>
  <div class="form-group login-password">
    <label>パスワード</label>
    <%= f.password_field :password, class: "form-control", size: 50 %>
  </div>
  <%= link_to "戻る", 'javascript:history.back()', class: "btn" %>
  <%= f.submit "ログイン", class: "btn login" %>
<% end %>
